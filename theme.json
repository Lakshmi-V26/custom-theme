{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#0055aa"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "#f5f5f5"
        },
        {
          "name": "Accent",
          "slug": "accent",
          "color": "#ff6600"
        },
        {
          "name": "Text",
          "slug": "text",
          "color": "#111111"
        }
      ],
      "custom": false
    },
    "typography": {
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "16px",
          "name": "Normal"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "32px",
          "name": "Extra Large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "Inter, sans-serif",
          "name": "Inter",
          "slug": "inter"
        }
      ],
      "lineHeight": true,
      "customFontSize": false
    },
    "spacing": {
      "units": ["px", "em", "rem", "%"],
      "spacingScale": {
        "steps": 6
      }
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "custom": {
      "registerButtonColor": "#ff6600"
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--text)",
      "background": "#ffffff"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": "2rem"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
  